<style>
  div {
      display: inline;
  }
</style>

<%= form_with model: item do |form| %>
  <%= form.text_field :name, class: "item_name", placeholder: "Name" %>
  <% item.errors.full_messages_for(:name).each do |message| %>
    <script>
      alert("<%= message %>")
    </script>
  <% end %>

  <%= form.number_field :price, class: "item_price", placeholder: "Price" %>
  <% item.errors.full_messages_for(:price).each do |message| %>
    <script>
        alert("<%= message %>")
    </script>
  <% end %>

  <%= form.submit %>
<% end %>